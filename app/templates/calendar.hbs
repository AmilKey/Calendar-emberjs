<div class="calendar-menu">
	<div>
		<button {{action 'toToday'}} class="btn btn-primary btn-large" style="width: 350px;">Today</button>
	</div>


	<div class=" year-bar ">
			<button {{action 'toDate' controller.yearPrev controller.monthSelected controller.daySelected}} 		class="btn btn-primary btn-large">Prev</button>
		<span class="label label-info" style="width: 172px;font-size: 21px; text-align: center;padding: 8px">{{controller.yearSelected}}</span>
			<button {{action 'toDate' controller.yearNext controller.monthSelected controller.daySelected}} 		class="btn btn-primary btn-large" >Next</button>
	</div>
	<div class=" month-bar ">
			<button {{action 'toDate' controller.yearSelected controller.monthPrev controller.daySelected}} 		class="btn btn-primary btn-large" >Prev</button>
		<span class="label label-info" style="width: 172px;font-size: 21px; text-align: center;padding: 8px">{{controller.monthName}}</span>
			<button {{action 'toDate' controller.yearSelected controller.monthNext controller.daySelected}} 		class="btn btn-primary btn-large" >Next</button>
	</div>
</div>

	<div class="days">
		<div class="week "style="width: 350px;">
		<span title="Monday">Mon</span>
		<span title="Tuesday" >Tue</span>
		<span title="Wednesday">Wed</span>
		<span title="Thursday">Thu</span>
		<span title="Friday" >Fri</span>
		<span title="Saturday" >Sat</span>
		<span title="Sunday">Sun</span>
		</div>
		
	{{#each week in controller.daysByWeeks}}
			<div class="btn-group">
			{{#each date in week}}
				
				<button {{action 'toDate' controller.yearSelected controller.monthSelected date.day}} 				class="{{ unbound date.class }}" style="width: 50px; height: 30px;">
				
					{{date.day}}

				</button>	
			{{/each}}
			</div>
		{{/each}}

	</div>


